{
  "name": "work-report-slack",
  "version": "0.0.1",
  "author": "genki-sano",
  "description": "This repository is a SlackApp for work reporting.",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack",
    "deploy": "yarn run build && yarn run clasp push",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "lint:eslint": "eslint ./src/**/* --no-error-on-unmatched-pattern",
    "lint:prettier": "prettier --check ./src/**/*",
    "fix:eslint": "yarn run lint:eslint --fix",
    "fix:prettier": "yarn run lint:prettier --write"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-decorators": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@google/clasp": "^2.4.1",
    "@types/google-apps-script": "^1.0.37",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-loader": "^8.2.2",
    "es3ify-webpack-plugin": "^0.1.0",
    "eslint": "^7.32.0",
    "gas-webpack-plugin": "^2.1.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.1",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3",
    "webpack": "^5.58.1",
    "webpack-cli": "^4.9.0"
  },
  "lint-staged": {
    "*.ts": [
      "yarn run fix:eslint",
      "yarn run fix:prettier",
      "git add ."
    ]
  }
}
